<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>me.muendelein.mcname</string>
	<key>ProgramArguments</key>
	<array>
		<string>sh</string>
		<string>-c</string>
		<string>  export n=&quot;mac-$(/usr/local/bin/names-generator | tr _ -)&quot;;   scutil --set LocalHostName $n;   scutil --set HostName $n;   scutil --set ComputerName $n</string>
	</array>
	<key>StartInterval</key>
	<integer>3600</integer>
</dict>
</plist>
